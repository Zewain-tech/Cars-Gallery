<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/custom_card_elevation"
    app:cardCornerRadius="@dimen/custom_card_radius"
    app:cardUseCompatPadding="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/custom_car_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_car_iv_height"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/landscape" />

        <TextView
            android:id="@+id/custom_car_tv_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/custom_car_tv_padding"
            android:text="@string/ed_car_model_hint"
            android:textSize="@dimen/custom_car_model_textsize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_car_iv" />

        <TextView
            android:id="@+id/custom_car_tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_color"
            android:drawablePadding="@dimen/custom_car_tv_padding"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/custom_car_tv_padding"
            android:paddingStart="@dimen/custom_car_tv_padding"
            android:text="@string/ed_car_color_hint"
            android:textSize="@dimen/custom_car_textsize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_car_tv_model" />

        <TextView
            android:id="@+id/custom_car_tv_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_gas"
            android:drawablePadding="@dimen/acctivity_details_linear_margin"
            android:gravity="center_vertical"
            android:padding="@dimen/custom_car_tv_padding"
            android:text="@string/ed_car_distance_hint"
            android:textSize="@dimen/custom_car_textsize"
            app:layout_constraintTop_toBottomOf="@+id/custom_car_tv_color"

            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


